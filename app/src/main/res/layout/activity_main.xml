<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.happybirthday.MainActivity">

    <ImageView
        android:src="@drawable/jellystone_campgrounds_activitie_birthday_parties"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="happy birthday Yogi!!!"
        android:id="@+id/textView"
        android:textSize="32sp"
        android:padding="20dp"
        android:textColor="#FB5733"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textStyle="italic"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from booboo"
        android:textStyle="italic"
        android:padding="20dp"
        android:textColor="#5cb85c"
        android:fontFamily="sans-serif-bold"
        android:id="@+id/textView"
        android:textSize="36sp"
        android:elevation="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>
